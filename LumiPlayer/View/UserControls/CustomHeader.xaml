<UserControl x:Class="LumiPlayer.View.UserControls.CustomHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LumiPlayer.View.UserControls"
             mc:Ignorable="d" 
             MouseDown="Drag_MouseDown"
             d:DesignHeight="30" d:DesignWidth="450">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LumiPlayer;component/Styles/BasicStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="LumiPlayer" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="10 0"/>
            <Button Style="{StaticResource ClickButton}" Grid.Column="1" Content="-" Width="40" Click="Minimize_Click" 
                    Background="Transparent" Foreground="White" BorderBrush="Transparent" Margin="0 0 0 2"/>


            <Button Style="{StaticResource ClickButton}" Grid.Column="2" Content="X" Width="40" Click="Close_Click" Background="Transparent" FontWeight="Bold"
                     Foreground="White" BorderBrush="Transparent" Margin="0 0 0 1"/>

        </Grid>
        <Border Grid.Row="1" Panel.ZIndex="10" Background="Transparent" BorderBrush="White" BorderThickness="0.6" VerticalAlignment="Bottom" Width="450"/>
    </Grid>
</UserControl>
